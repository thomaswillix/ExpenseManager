<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:backgroundTint="@color/background"
    tools:ignore="HardcodedText" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="200dp"
            app:cardCornerRadius="30dp"
            android:layout_margin="25dp"
            android:backgroundTint="#191919"
            android:layout_gravity="center"
            app:cardElevation="18dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="35dp"
                android:text="Total Balance"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/total_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:text="2500.00 €"
                android:textColor="@color/white"
                android:textSize="40sp" />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Income icon"
                        app:tint="@color/income"
                        app:srcCompat="@drawable/money_growth">
                    </ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="start">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:layout_marginStart="10dp"
                            android:text="Income"
                            android:textSize="16sp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/totalIncome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="+3200.00 €"
                            android:textColor="@color/income"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="70dp"
                        android:layout_marginTop="4dp"
                        android:contentDescription="Expense icon"
                        app:srcCompat="@drawable/money_loss"
                        app:tint="@color/totalExpenses"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="30dp"
                            android:text="Expenses"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="30dp"
                            android:text="-7000.00 €"
                            android:textColor="@color/totalExpenses"
                            android:textSize="16sp" />

                    </LinearLayout>
                </LinearLayout>
            </GridLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="DisableBaselineAlignment">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="6"
                android:gravity="start"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginStart="20dp"
                    android:text="Transactions"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/viewAllTransactions"
                    android:textSize="14sp"
                    android:textColor="#757272"
                    android:layout_marginEnd="20dp"
                    android:text="View All"/>
            </RelativeLayout>
        </LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="20dp"
            tools:listitem="@layout/list_item" />
        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width= "match_parent"
            android:layout_height="match_parent">
            <!---> TODO: Ver comportamiento de los botones y arreglar interfaz<-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/tvExpense"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/nav_header"
                    android:padding="5dp"
                    android:text="Expense"
                    android:textAppearance="?android:textAppearanceSmall"
                    android:textColor="@color/white"
                    android:visibility="invisible" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabExpenseBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="Floating action buton to add an expense"
                    android:backgroundTint="@color/totalExpenses"
                    app:fabSize="normal"
                    android:elevation="6dp"
                    android:visibility="invisible"
                    app:pressedTranslationZ="12dp"
                    android:src="@drawable/money_loss"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Income"
                    android:id="@+id/tvIncome"
                    android:textColor="@color/white"
                    android:padding="5dp"
                    android:background="@color/nav_header"
                    android:layout_gravity="center"
                    android:visibility="invisible"
                    android:textAppearance="?android:textAppearanceSmall"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabIncomeBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/income"
                    android:contentDescription="Floating action buton to add an income"
                    android:elevation="6dp"
                    android:src="@drawable/money_growth"
                    android:visibility="invisible"
                    app:fabSize="normal"
                    app:pressedTranslationZ="12dp" />
            </LinearLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fabMainBtn"
                android:layout_gravity="center"
                android:contentDescription="Floaing button to ad a transaction"
                app:shapeAppearance="@drawable/add"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/income"
                android:elevation="6dp"
                app:fabSize="normal"
                android:src="@drawable/add"/>
        </androidx.coordinatorlayout.widget.CoordinatorLayout>
    </LinearLayout>
</ScrollView>